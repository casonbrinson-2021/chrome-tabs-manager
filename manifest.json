{
    "name": "Simple Tab Manager",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["tabs", "activeTab", "scripting"],
    "description": "Extension to simplify tab management",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Easy Read"
    },
    "background": {
        "service_worker": "service-worker.js"
    }
}